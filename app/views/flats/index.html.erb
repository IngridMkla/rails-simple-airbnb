<section id="menu">
  <div class="home-picture">
    <p>Airbnb</p>
    <%=link_to new_flat_path(@flat) do %>
      <button>Add a Flat</button>
    <%end%>
  </div>

  <div class="top-part">
    <h1> OUR FLATS </h1>
    <p><%= Flat.count %> flats available!</p>
  </div>

  <% @flats.each do |flat| %>
    <div class="flat-display">
      <h3><%= flat.name %> <br></h3>
      <p>Address : <%= flat.address %></p>
      <p>Description : <%= flat.description %></p>
      <p>Price per night : <%= flat.price_per_night %></p>
      <p>Number of guests : <%= flat.number_of_guests %></p>

      <div class="links">
        <%= link_to "Edit", edit_flat_path(flat) %>
        <%= link_to "More info", flat_path(flat) %>
        <%= link_to "Remove",
          flat_path(flat),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
        %>
      </div>
    </div>
  <% end %>
</section>
